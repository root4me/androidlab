<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="2dp"
    android:layout_margin="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/loc_dateContainer"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/loc_capturedDate"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="16dp"
                android:text="April 3"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/loc_capturedTime"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="16dp"
                android:text="10:00 AM Central"
                />
        </LinearLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/loc_lat"
            android:layout_toRightOf="@+id/loc_dateContainer"
            android:layout_alignParentTop="true"
            android:text="latitude"
            android:layout_alignParentRight="true"
            android:textAlignment="viewEnd" />

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:id="@+id/loc_lng"
            android:layout_toRightOf="@+id/loc_dateContainer"
            android:layout_below="@+id/loc_lat"
            android:text="longitude"
            android:textAlignment="viewEnd" />


        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:id="@+id/loc_synced"
            android:layout_toRightOf="@+id/loc_dateContainer"
            android:layout_below="@+id/loc_lng"
            android:text="not synced"
            android:textAlignment="viewEnd" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>
